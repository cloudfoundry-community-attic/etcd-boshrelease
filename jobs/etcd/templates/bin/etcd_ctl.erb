#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/etcd/helpers/ctl_setup.sh 'etcd'

ETCD_VERSION="0.2.0-rc2"
WORK_DIR=/var/vcap/store/etcd-$ETCD_VERSION

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    mkdir -p $WORK_DIR
    chown -R vcap:vcap $WORK_DIR
    
    echo $$ > $PIDFILE

    exec chpst -u vcap:vcap /var/vcap/packages/etcd/etcd -snapshot -data-dir $WORK_DIR \
        -addr $LISTEN_ADDRESS:$PORT \
        -bind-addr 0.0.0.0 \
        -peer-addr $LISTEN_ADDRESS:$PEER_PORT \
        -peer-bind-addr 0.0.0.0\
        -name=$NAME_INDEX \
        <% if_p("etcd.leader_address") do |leader_address| %>\
        -peers <%= leader_address %>:$PEER_PORT \
        <% end %>\
         1>>$LOG_DIR/etcd.stdout.log \
         2>>$LOG_DIR/etcd.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: etcd_ctl {start|stop}"

    ;;

esac
exit 0